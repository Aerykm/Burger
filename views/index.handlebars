<h1>Burgers yo!</h1>

<h2>Burgers on you</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured burgers nom nom nom</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ba" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Devoured</label><br>
    <input type="radio" name="sleepy" value="1" checked> Devoured<br>
    <input type="radio" name="sleepy" value="0"> Not devoured
  </div>

  <button type="submit">Add burger</button>
</form>
